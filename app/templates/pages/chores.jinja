{#=====================================================
  Home page
  - Hero style greeting banner
  - List of things passed in as 'things' array
  - Form for adding a new thing
=====================================================#}

{% extends 'pages/base.jinja' %}


{% block title %}

    Family ToDo - Chores

{% endblock %}


{% block content %}

    <article>

        <h2>{{ person.name }}, pick a chore...</h2>

        <ul>
            {% for chore in chores %}

                <li>
                    <a href="/SubChores/{{ person.id }}">
                        {{ chore.name }}
                        {{ chore.done }}
                    </a>
                </li>

            {% else %}

                <p>None!</p>

            {% endfor %}
        </ul>

    </article>

{% endblock %}

