{#=====================================================
  Home page
  - Hero style greeting banner
  - List of things passed in as 'things' array
  - Form for adding a new thing
=====================================================#}

{% extends 'pages/base.jinja' %}


{% block title %}

    Family ToDo - sub chores

{% endblock %}


{% block content %}

    <article>

        <h2>{{ person.name }}, pick a sub chore...</h2>

        <ul>
            {% for  sub_chore in  sub_chores %}

                <li>
                    {{ sub_chore.name }}
                    {{ sub_chore.done }}
                    
                </li>

            {% else %}

                <p>None!</p>

            {% endfor %}
        </ul>

    </article>

{% endblock %}

